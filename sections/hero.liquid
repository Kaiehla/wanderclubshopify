<main>
    {% comment %} Desktop to Tablet - Overlay {% endcomment %}
    <section class="hero-section position-relative w-100">
        <img src="{{ 'img-hero.png' | asset_url }}" alt="Hero image" class="hero-img w-100 d-block" loading="lazy">
        <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center d-none d-md-block">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-7 col-lg-7">
                        <p class="hero-intro text-primary text-uppercase fw-bold subheading mb-1">{{ section.settings.intro }}</p>
                        <h1 class="hero-title text-primary heading mb-2">{{ section.settings.title }}</h1>
                        <p class="text-dark subheading fw-medium hero-description">{{ section.settings.description }}</p>
                    
                    
                        <div class="d-flex align-items-center mt-3">
                            <a href="{{ section.settings.button_url }}" class="btn btn-primary btn-lg text-uppercase subheading fw-bold rounded-5 cta-button">{{ section.settings.button_text }}</a>
                            <div class="d-flex flex-column ms-2 justify-content-start">
                            <div class="d-flex flex-column align-items-start ms-2 justify-content-start mt-1">
                                <img src="{{ 'icon-rating.svg' | asset_url }}" alt="5 star rating" class="hero-rating-icon" loading="lazy" />
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold text-secondary text-uppercase hero-rating-text">{{ section.settings.rating }}</span>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                </div>
            </div>
        </div>
    </section>

 {% comment %} Mobile - Overlay becomes a block below {% endcomment %}
    <section class="container-fluid d-block d-md-none ">
        <div class="row">
            <div class="col-12 text-start py-3">
                <p class="hero-intro text-primary text-uppercase fw-bold subheading mb-1">{{ section.settings.intro }}</p>
                <h1 class="hero-title text-primary heading mb-2">{{ section.settings.title }}</h1>
                <p class="text-dark subheading fw-medium hero-description mb-0">{{ section.settings.description }}</p>
            </div>
        </div>
        {% comment %} Button & Rating {% endcomment %}
        <div class="row bg-light">
            <div class="col-12 text-center py-3">
                <div class="d-flex align-items-center ms-2 justify-content-center mb-2 gap-1">
                    <img src="{{ 'icon-rating.svg' | asset_url }}" alt="5 star rating" class="hero-rating-icon" loading="lazy" />
                    <div class="d-flex align-items-center justify-content-center">
                        <span class="subheading fw-bold text-secondary text-uppercase hero-rating-text">{{ section.settings.rating }}</span>
                    </div>
                </div>
                <a href="{{ section.settings.button_url }}" class="btn btn-primary btn-lg text-uppercase subheading fw-bold rounded-5 cta-button w-100 d-block">{{ section.settings.button_text }}</a>
                
            </div>
        </div>
    </section>
</main>

{% stylesheet %}
.hero-section {
    min-height: 350px;
    max-height: 500px;
    overflow: hidden;
    position: relative;
    align-content: center;
}
.hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 350px;
    max-height: 600px;
   
}
.hero-overlay {
    z-index: 2;
    padding: 2rem;
}
.hero-overlay > .container {
    height: 100%;
    display: flex;
    align-items: center;
}
.hero-title {
    font-size: 4.5rem;
    line-height: 72px;
}
.hero-intro {
    font-size: 1.25rem;
    letter-spacing: 4px;
}
.hero-description {
    font-size: 1.125rem;
    letter-spacing: 0px
}
.cta-button {
    padding: 0.75rem 1.5rem;
    font-size: 1.1rem;
    letter-spacing: 0%;
}


.hero-rating-icon {
    height: 28px;
    width: auto;
    margin-bottom: 2px;
}
.hero-rating-text {
    font-size: 1.1rem;
}

@media (max-width: 1199.98px) and (min-width: 992px) {
    .hero-title { font-size: 3.2rem; line-height: 3.5rem; }
    .hero-intro { font-size: 1.2rem; letter-spacing: 3px; }
    .hero-description { font-size: 1.1rem; }
}
@media (max-width: 991.98px) {
    .hero-title { font-size: 2.2rem; line-height: 2.7rem; }
    .hero-intro { font-size: 1.1rem; letter-spacing: 2px; }
    .hero-description { font-size: 1rem; }
    .hero-rating-icon { height: 18px; }
    .hero-rating-text { font-size: 0.8rem; }
    .cta-button { padding: 0.5rem 1rem; font-size: 0.8rem; }
}
@media (max-width: 767.98px) {
    .hero-title { font-size: 2.8rem; }
    .hero-intro { font-size: 1rem; letter-spacing: 2px; }
    .hero-description { font-size: 1.25rem; }
    .hero-section, .hero-img { min-height: 200px; max-height: 320px; }
    .hero-rating-icon { height: 20px; }
    .hero-rating-text { font-size: 1.125rem; }
    .cta-button { padding: 0.75rem 1rem; font-size: 1.125rem; }
}
@media (max-width: 320px) {
    .hero-title { font-size: 2rem; line-height: 2.5rem; }
    .hero-intro { font-size: 0.9rem; letter-spacing: 1px; }
    .hero-description { font-size: 1rem; }
    .hero-rating-icon { height: 16px; }
    .hero-rating-text { font-size: 1rem; }
}
{% endstylesheet %}

{% schema %}
{
    "name": "Hero",
    "settings": [
        {
            "type": "image_picker",
            "id": "hero_image",
            "label": "Hero image"
        },
         {
            "type": "text",
            "id": "intro",
            "label": "Intro",
            "default": "From Trips to Treasures"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Carry Memories Wherever You Wander"
        },
        {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "<span class='fw-bold'>BUY ONE, GET ONE FREE </span>Token and Holder (Limited Time Only)"
        },
        {
            "type": "text",
            "id": "rating",
            "label": "Rating",
            "default": "30K Happy Reviews"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Start Collecting Today"
        },
        {
            "type": "text",
            "id": "button_url",
            "label": "Button URL",
            "default": "#"
            
        }
    ],
    "presets": [
        { "name": "Hero" }
    ]
}
{% endschema %}