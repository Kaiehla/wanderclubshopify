<section class="bg-light">


  <div class="container bg-light px-2 px-md-0" style="padding: 12px 0px;">
    <div class="row d-flex align-items-center">
      <div class="col-12 col-md-3 col-lg-2 mb-2 mb-lg-0 d-none d-md-block">
        <h6 class="subheading fw-bold text-primary text-start w-100 mb-0 token_title">Best Sellers for Over 250,000+ Wanderers Keeping Memories Alive</h6>
      </div>
      <div class="col-12 col-md-9 col-lg-10 p-0">
        <div class="row d-flex align-items-center tokens-collections-row flex-nowrap flex-lg-wrap overflow-auto overflow-lg-visible">
          {% assign all_collections = collections | map: 'handle' %}
          {% if all_collections.size > 0 %}
            {% for collection_handle in all_collections %}
              {% assign collection = collections[collection_handle] %}
              {% if collection %}
                <div class="col token-col">
                  <a href="{{ collection.url }}" class="text-decoration-none">
                    <div class="card h-100 w-100 d-flex justify-content-center text-center border-0 bg-transparent">
                      {% if collection.image %}
                        <img
                          src="{{ collection.image | image_url: width: 100, height: 100, crop: 'center' }}"
                          class="card-img-top img-fluid mx-auto d-block mb-1 tokens token-img"
                          alt="{{ collection.title }}">
                      {% else %}
                        <div class="card-img-top bg-light d-flex align-items-end justify-content-center mx-auto" style="height:200px; width: 100px;">
                          <span class="text-muted">No image</span>
                        </div>
                      {% endif %}
                      <div class="p-0 mb-0">
                        <div class="subheading fw-bold mb-0 text-primary text-center" style="font-size:12px;">{{ collection.title }}</div>
                      </div>
                    </div>
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          {% else %}
            <div class="col-12">
              <div class="alert alert-warning text-center">No collections found.</div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Token Animation CSS */
  @keyframes dangle {
    0% {
      transform: rotate(0deg);
    }
    15% {
      transform: rotate(-15deg);
    }
    30% {
      transform: rotate(12deg);
    }
    45% {
      transform: rotate(-10deg);
    }
    60% {
      transform: rotate(8deg);
    }
    75% {
      transform: rotate(-6deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }
  .tokens {
    transition: transform 0.5s ease-in-out;
    transform-origin: 50% 0;
    display: inline-block;
  }
  .tokens.dangle-animate {
    animation: dangle 1.5s cubic-bezier(0.36,.07,0.19,.97) both;
  }
  /* Token Image Responsiveness */
  .token-img {
    width: 60px;
    max-width: 100%;
    height: auto;
  }
  @media (max-width: 991.98px) {
    .token-img {
      width: 50px;
    }
  }

  /* Token Scroller */
  .tokens-collections-row {
    flex-wrap: wrap;
  }
  @media (max-width: 991.98px) {
    .tokens-collections-row {
      flex-wrap: nowrap !important;
      overflow-x: auto !important;
      padding-left: 0;
      -webkit-touch-callout: touch;
      -webkit-mask: linear-gradient(90deg,#0000,#000 10% 80%,#0000)
    }
    .tokens-collections-row > .token-col {
      min-width: 140px;
      max-width: 140px;
      flex: 0 0 140px;
      padding-left: 0.25rem;
      padding-right: 0.25rem;
      white-space: nowrap;
    }
  }
  @media (max-width: 767.98px) {
    .tokens-collections-row {
      flex-wrap: nowrap !important;
      overflow-x: auto !important;
      padding-left: 0;
      -webkit-touch-callout: touch;
      -webkit-mask: linear-gradient(90deg,#0000,#000 10% 80%,#0000)
    }
    .tokens-collections-row > .token-col {
      min-width: 110px;
      max-width: 110px;
      flex: 0 0 110px;
    }
  }

  /* Best Seller Title Content  */
  .token_title {
    font-size: 17px;
  }
  @media (max-width: 991.98px) {
    .token_title {
      font-size: 14px;
    }
  }
  @media (max-width: 767.98px) {
    .token_title {
      font-size: 12px;
    }
  }
</style>

{% comment %} Token Dangle Animation {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    function triggerDangleAnimation(el) {
      el.classList.remove('dangle-animate');
      // Force reflow to restart animation
      void el.offsetWidth;
      el.classList.add('dangle-animate');
    }
    document.querySelectorAll('.tokens').forEach(function(tokenImg) {
      // Touch event for mobile
      tokenImg.addEventListener('touchstart', function(e) {
        triggerDangleAnimation(tokenImg);
      });
      // Mouse hover event for desktop
      tokenImg.addEventListener('mouseenter', function(e) {
        triggerDangleAnimation(tokenImg);
      });
      // Remove animation class after animation ends
      tokenImg.addEventListener('animationend', function() {
        tokenImg.classList.remove('dangle-animate');
      });
    });
  });
</script>

